<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="@color/white_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImageOnBoardingPlace"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="5dp"
        app:cardCornerRadius="20dp"
        >
        <ImageView
            android:id="@+id/ivImageOnBoarding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvTitleOnBoardingPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvImageOnBoardingPlace"
        >
        <TextView
            android:id="@+id/tvTitleOnBoarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lorem2"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/pink_primary"
            android:fontFamily="@font/poppins_bold"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvDescOnBoarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cvTitleOnBoardingPlace"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:text="@string/lorem"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/black_400"
        android:fontFamily="@font/poppins_semibold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>